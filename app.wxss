@import 'common/icon.wxss';

page {
   width: 100%;
   height: 100%;
}

/* 全局的page样式 */

.page {
   width: 100%;
   height: 100%;
   box-sizing: border-box;
   /* background-color: green; */
}

/* 页面根元素基本样式 */

.page-root {
   height: 100%;
   display: flex;
   flex-direction: column;
}

/* 横向排列 */

.flex-row {
   display: flex;
   align-items: cneter;
}

/* 横向排列上下居中两端对齐 */

.flex-r-c {
   display: flex;
   align-items: cneter;
   justify-content: space-between;
}

/* 纵向排列 */

.flex-col {
   display: flex;
   flex-direction: column;
   justify-content: space-around;
}

/* 纵向排列两端对齐 */

.flex-c-b {
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}

/* 纵向排列居中对齐 */

.flex-c-c {
   display: flex;
   align-items: center;
   flex-direction: column;
   justify-content: space-between;
}

/* 占满剩余空间 */

.flex-1 {
   flex: 1;
}

/* 全局content样式 */

.content {
   width: 100%;
   height: 100%;
   padding: 0 36rpx;
   box-sizing: border-box;
}








/*公共样式定义*/

/*横向布局*/
.p-fx-row {
   /*横向排序*/
   display: flex;
}

.p-fx-row-d-c{
   /*横向排列 左对齐 上下居中*/
   display:flex;
   align-items:center;
}

.p-fx-row-ed-c{
   /*横向排列 右对齐 上下居中*/
   display:flex;
   align-items:center;
   justify-content:flex-end;
}

.p-fx-row-sb {
   /*横向排序 两端对齐*/
   display: flex;
   justify-content: space-between;
}

.p-fx-row-sb-c{
   /*横向排序 两端对齐 上下居中*/
   display: flex;
   justify-content: space-between;
   align-items:center;
}

.p-fx-row-sa {
   /*横向排序 两端对齐有边距*/
   display: flex;
   justify-content: space-around;
}

.p-fx-row-sa-c{
   /*横向排序 两端对齐有边距 上下居中*/
   display: flex;
   align-items: center;
   justify-content: space-around;
}

.p-fx-row-c-c{
   /*横向排列 上下左右居中*/
   display:flex;
   align-items:center;
   justify-content:center;
}



/*纵向布局*/
.p-fx-col{
   /*纵向排列*/
   display: flex;
   flex-direction: column;
}

.p-fx-col-sb {
   /*纵向排列 两端对齐*/
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}

.p-fx-col-d-c{
   /*纵向排列 头部对齐 左右居中 */
   display:flex;
   flex-direction:column;
   align-items:center;
}

.p-fx-col-ed-c{
   /*纵向排列 底部对齐 左右居中 */
   display:flex;
   flex-direction:column;
   justify-content:flex-end;
   align-items:center;
}

.p-fx-col-sb-c {
   /*纵向排列 两端对齐 左右居中*/
   display: flex;
   flex-direction: column;
   justify-content: space-between;
   align-items: center;
}

.p-fx-col-sa {
   /*纵向排列 两端对齐有边距*/
   display: flex;
   flex-direction: column;
   justify-content: space-around;
}

.p-fx-col-sa-c {
   /*纵向排列 两端对齐有边距 左右居中*/
   display: flex;
   flex-direction: column;
   justify-content: space-around;
   align-items: center;
}

.p-fx-col-c-c {
   /*纵向排列 居中对齐 左右居中*/
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}

.p-fx-1 {
   /*占满剩余空间*/
   flex: 1;
}

/*浮动布局*/

.p-ft-parent:after {
   /*加在浮动元素的父元素上 解决子元素浮动父元素高度问题*/
   content: '';
   display: block;
   clear: both;
}

.p-ft-l {
   /*左浮动*/
   float: left;
}

.p-ft-r {
   /*右浮动*/
   float: right;
}



