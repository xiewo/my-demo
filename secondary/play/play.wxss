/* 播放也 */

.page {
    width: 100%;
}

.play {
    width: 100%;
    height: 100%;
}

/* 视频的尺寸 */

.play-video  .myVideo {
    width: 100%;
    height: 422rpx;
}

/* 文档显示区域的样式 */

.play .play-item {
    margin-top: 28rpx;
    padding: 0 36rpx;
}

/* 头部说明 */

.play .play-top-title {
    font-size: 24rpx;
    color: #999;
    padding-bottom: 24rpx;
    border-bottom: 2rpx solid #ebebeb;
}

.play-top-title .top-title-text .line-clamp {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.top-title-h .icon-wujiaoxingkong {
    width: 50rpx;
    height: 50rpx;
    border: 1rpx dashed #999;
    line-height: 50rpx;
    text-align: center;
    margin-bottom: 8rpx;
}

.top-title-h text:last-child {
    color: #666;
}

/* 公司 */

.play-item .play-company {
    color: #666;
    font-size: 28rpx;
    font-weight: bold;
    padding: 26rpx 0;
    border-bottom: 2rpx solid #ebebeb;
}

.play-item .play-company image {
    width: 62rpx;
    height: 62rpx;
    margin-right: 24rpx;
}

.play-item  .play-s {
    padding: 26rpx 0;
    font-size: 28rpx;
    color: #666;
}

.play-s .play-s-top {
    font-weight: bold;
}

.play-s .play-s-top>text:first-child {
    font-size: 32rpx;
    color: #333;
}

.play-s-top .s-top-all .icon-youjiantou5 {
    margin-left: 16rpx;
}



/* 图片设置宽高 */
.play-s-video{
    padding-bottom: 40rpx;
    margin-top:30rpx;
    border-bottom: 1rpx solid #EBEBEB;
}


.play-s-video .video-item {
    width: 240rpx;
    margin-right: 24rpx;
    flex-shrink: 0;
}
 

 .play-s-video .video-image{
    position: relative;
    height: 136rpx;
}

.play-s-video .video-image image{
    width: 100%;
    height: 100%;
}

.play-s-video .video-image .video-tier{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0 ;
    left: 0 ;
    background-color: rgba(0,0,0,0.2);
    color: #fff;
    font-size: 20rpx;
}

.video-image .video-tier .tier1 {
    font-size: 20rpx;
    width: 94rpx;   
    height: 38rpx;
    background-color: #9FBFFF;
    border-radius: 8rpx;
    line-height: 38rpx;
    text-align:center; 
}

.video-image .video-tier .tier2{
    color: #ddd;
    border: 1rpx dashed #999;
}

.video-item .video-title{
    width: 100%;
    font-size: 28rpx;
    color: #999999;
    margin-top:15rpx;
}



/* 视频下面的说明 */



.video-item .video-title text{
   -webkit-line-clamp: 2;
}


.video-item .video-title  .sel-color{
    color: #49B4B1;
}


/* 课程简介 */

.play-intro{
    font-size: 32rpx;
    color: #666;
    padding: 40rpx 0;
}

.play-intro .intro-top text:first-child{
    color: #333;
    font-weight: bold;
    margin-bottom: 28rpx;
}


.play-intro .intro-image {
   margin-top: 28rpx;
}

.play-intro .intro-image image{
    width: 110rpx;
    height: 110rpx;
    /* border-radius: 50%; */
    border: 2rpx dashed #666;
}
 .intro-image  .intro-uname{
     margin-left: 46rpx;
 }

.intro-image  .intro-uname text:first-child{
    font-weight: bold;

}

.intro-image  .intro-uname text:last-child{
    width: 216rpx;
    height: 44rpx;
    background-color: #FFF9F1;
    border-radius: 8rpx;
    color: #DBA015;
    font-size: 24rpx;
    margin-top: 20rpx;
    line-height: 44rpx;
    text-align: center; 

}


.play-intro  .intro-title{
    margin-top: 14rpx;
}

.play-intro  .intro-title>view:last-child{
    margin-top: 24rpx;
    text-indent:2em;
}
