/* 播放也 */

.page {
    width: 100%;
}

.play {
    width: 100%;
    height: 100%;
  
}

/* 视频的尺寸 */

.play-video  .myVideo {
    width: 100%;
    height: 422rpx;
}

/* 文档显示区域的样式 */
.play .play-item{
    margin-top: 28rpx;
    padding: 0 36rpx;
}

/* 头部说明 */
.play .play-top-title {
  
    font-size: 24rpx;
    color: #999;
    padding-bottom: 24rpx; 
     border-bottom: 2rpx solid #ebebeb;
}

.play-top-title .top-title-text .line-clamp {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.top-title-h .icon-wujiaoxingkong {
    width: 50rpx;
    height: 50rpx;
    border: 1rpx dashed #999;
    line-height: 50rpx;
    text-align: center;
    margin-bottom: 8rpx;
}

.top-title-h text:last-child {
    color: #666;
}


/* 公司 */

.play-item .play-company{
   color: #666666;
   font-size: 28rpx;
   font-weight: bold;
   padding: 26rpx 0 ;
   border-bottom: 2rpx solid #ebebeb;
}

.play-item .play-company image{
    width: 62rpx;
    height: 62rpx;
    margin-right: 24rpx;
}

.play-item  .play-s{
   padding: 26rpx 0;
   font-size: 28rpx;
   color: #666666;
}
.play-s .play-s-top>text:first-child{
    font-size: 32rpx;
    font-weight: bold; 
    color: #333333;
}

.play-s-top .s-top-all .icon-youjiantou5{
     margin-left: 16rpx;
}


