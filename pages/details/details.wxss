


 .course-head{
   position: relative;
   height: 422rpx;  

}

.course-head image{
    position: absolute;
    width: 100%;
    height: 100%;
}

.course-head .course-title{
    position: absolute;
    color: #fff;
    font-size: 32rpx;
    left: 36rpx;
    top: 36rpx;
    line-height: 44rpx;
}

.course-head .course-title text:first-child{
    margin-right: 22rpx;
}

.course-head .lock-btn{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 196rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 68rpx;
    background-color: rgba(0,0,0,0.5);
    font-size: 28rpx;
    color: #fff;
}


.deadline{
  margin-top: 30rpx;
 
}
.deadline .icon-wujiaoxing,.deadline .icon-wujiaoxingkong{
    line-height: 54rpx;

    /* text-align:center;
    line-height:50rpx;
    width:50rpx;
    height:50rx; */
}

.deadline .deadline-money {
    line-height: 54rpx;
    font-size: 18rpx;
}
.deadline .deadline-money text:first-child{
      color: #DE595E;
      font-size: 44rpx;
      font-weight: bold;
}

.deadline .deadline-money text:nth-child(2){
  margin-left: 40rpx;
   height: 26rpx;
   border-radius: 5rpx;
   border: 2rpx solid #FF9AAB;
   color: #FF9AAB;
   padding: 3rpx;
   /* margin-top: 15rpx; */
}

.deadline .deadline-money text:last-child{
     margin-left: 20rpx;
      border: 2rpx solid green;
      height: 26rpx;
      padding: 3rpx;
     /* margin-top: 15rpx; */
      border-radius: 5rpx;
}

.deadline  .collect{
   color: #ea9518;
}

.deadline .notCollect{
   color:#ACA9AC;
}
